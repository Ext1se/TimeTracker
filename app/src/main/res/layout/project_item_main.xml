<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#DDDDDD"
    android:paddingTop="0.6dp"
    android:paddingBottom="0.6dp"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <Button
            android:id="@+id/bInfo"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@android:color/background_light"
            android:drawableTop="@drawable/ic_info_gray"
            android:elevation="0dp"
            android:gravity="center"
            android:text="Info"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bGo"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@android:color/background_light"
            android:drawableTop="@drawable/ic_task_color"
            android:elevation="0dp"
            android:gravity="center"
            android:text="Tasks"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bEdit"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@android:color/background_light"
            android:drawableTop="@drawable/ic_edit_color"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bDelete"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@android:color/background_light"
            android:drawableTop="@drawable/ic_delete_red"
            android:gravity="center"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/frontLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/layoutClickable"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="-16dp"
            android:layout_marginRight="-16dp"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="-18dp">
        </RelativeLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tvMenu"
            android:text="Name"
            android:maxLength="50"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_toStartOf="@+id/tvMenu"
            android:text="Project"
            android:maxLength="50"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_toStartOf="@+id/tvMenu"
            android:textAlignment="viewStart"
            android:text="Tasks: 20"
            android:textStyle="italic"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageIndicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="-16dp"
            android:layout_marginRight="-16dp"
            android:layout_marginTop="-16dp"
            android:layout_marginBottom="-16dp"/>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="-16dp"
            android:layout_marginRight="-16dp"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="-8dp"/>

        <TextView
            android:id="@+id/tvMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_menu_gray"
            />
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>